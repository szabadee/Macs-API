<form method="POST" action="/macs/{{mac.id}}?_method=PUT">
  <div class="form-group">
    <label for="name">name</label>
    <input type="name" class="form-control" name="name" value="{{mac.name}}" />  
  </div>
  <div class="form-group">
    <label for="type">Type</label>
    <input type="type" class="form-control" name="type" value="{{mac.type}}" />  
  </div>
  <div class="form-group">
    <label for="inch">Inch</label>
    <input type="inch" class="form-control" name="inch" value="{{mac.inch}}" />  
  </div>
  <div class="form-group">
    <label for="year">Year</label>
    <input type="year" class="form-control" name="year" value="{{mac.year}}" />  
  </div>
  <input type="submit" value="update" />
</form>