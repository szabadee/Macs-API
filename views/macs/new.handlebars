<form method="POST" action="/macs">
  <div class="form-group">
    <label for="name">name</label>
    <input type="name" class="form-control" name="name" value="{{mac.req.query.name}}" />  
  </div>
  <div class="form-group">
    <label for="type">Type</label>
    <input type="type" class="form-control" name="type" value="{{mac.req.query.type}}" />  
  </div>
  <div class="form-group">
    <label for="inch">inch</label>
    <input type="inch" class="form-control" name="inch" value="{{mac.req.query.inch}}" />  
  </div>
  <div class="form-group">
    <label for="year">year</label>
    <input type="year" class="form-control" name="year" value="{{mac.req.query.year}}" />  
  </div>
  <input type="submit" value="create" />
</form>